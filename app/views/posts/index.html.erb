<h1>인덱스 페이지입니다</h1>

<!-- <a href="/posts/new">새글 쓰러가기</a> -->
<%= link_to '새글쓰러가기', new_post_path %>
<br />
<br />
<br />

<% @posts.each do |p| %>
  아이디: <%= p.id %> <br />
  제목: <%= p.title %> <br />
  <!-- <a href="/posts/show/<%= p.id %>">이 게시글로 가기</a> -->
  <%= link_to '이 게시글로 가기', post_path(p) %>
  <!-- <a href="/posts/edit/<%= p.id %>">수정</a> -->
  <%= link_to '수정', edit_post_path(p) %>
  <!-- <a href="/posts/destroy/<%= p.id %>">삭제</a> -->
  <%= link_to '삭제', post_path(p), method: :DELETE %>
  <br />
<% end %>
